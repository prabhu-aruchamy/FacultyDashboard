<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:ignore="UnusedAttribute"
    android:layout_height="match_parent"
    tools:context=".FacultyProfileActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/UI_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chooseImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/edit_profile_icon"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/facultyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name of the Faculty"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/facultyEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prabhu@thelordtech.in"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/facultyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7539922245"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/red"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIO"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/facultyBIO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_white_background"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Educational Details"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/facultyEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_white_background"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projects"
                    android:textSize="15dp"
                    android:textColor="@color/red"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/facultproj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_white_background"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <Button
                android:id="@+id/DownloadResume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:text="View Resume"
                android:textStyle="bold"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
